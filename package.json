{
	"name": "mcp-sqlite-tools",
	"version": "0.0.15",
	"description": "MCP server for local SQLite database operations",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"mcp-sqlite-tools": "./dist/index.js"
	},
	"files": [
		"dist",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc && chmod +x dist/index.js",
		"start": "node dist/index.js",
		"dev": "npx @modelcontextprotocol/inspector dist/index.js",
		"clean": "rm -rf dist",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish",
		"publish-mcp": "pnpm run sync-server-json && mcp-publisher publish",
		"sync-server-json": "node -e \"const pkg = require('./package.json'); const server = require('./server.json'); server.version = pkg.version; server.packages[0].version = pkg.version; require('fs').writeFileSync('./server.json', JSON.stringify(server, null, 2));\""
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"sqlite",
		"database",
		"sql",
		"llm",
		"ai",
		"local-database",
		"sqlite3"
	],
	"author": "Scott Spence",
	"license": "MIT",
	"mcpName": "io.github.spences10/mcp-sqlite-tools",
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.0.3",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@tmcp/adapter-valibot": "^0.1.5",
		"@tmcp/transport-stdio": "^0.4.1",
		"better-sqlite3": "^12.5.0",
		"csv-parser": "^3.2.0",
		"csv-writer": "^1.6.0",
		"tmcp": "^1.19.0",
		"valibot": "^1.2.0"
	}
}